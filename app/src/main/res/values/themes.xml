<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExpenseTrackerr" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_purple</item>
        <item name="colorPrimaryVariant">@color/theme_purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_orange</item>
        <item name="colorSecondaryVariant">@color/theme_grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/theme_black</item>
    </style>
    <style name="Theme.BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:state_checkable">?attr/colorPrimaryVariant</item>
    </style>

</resources>